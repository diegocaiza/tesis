<?xml version='1.0' encoding='iso-8859-1' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition template="/layout.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:p="http://primefaces.org/ui"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core">
    <ui:define name="content">
        <h:head>
            <title>ADMINISTRACIÓN DE PARALELOS</title>
            <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
            <link href="estilos/jsfcrud.css" type="text/css" rel="stylesheet" />
            <script type="text/javascript" src="estilos/validaciones.js"></script>
        </h:head>
        <h:body>
            <h:form id="dr"> 
                <p:messages id="messages" showDetail="true" autoUpdate="true" closable="true" />  
                <p:panel id="panel" header="REGISTRO DE PARALELOS"> 
                    <h:panelGrid columns="3" cellpadding="5" id="idgrid">  
                        <br></br>
                        <h:outputLabel value="#{msg.c_nota}" style="background-color: #C2DFEF;font-weight:bold"/>
                        <br></br><br></br>
                        <h:outputLabel  value="#{msg.c_codigo}" />  
                        <h:outputText id="#{msg.id_codigo}" value="#{vista_parale.txtcodigo}"/>  
                        <br></br>
                        <h:outputLabel value="#{msg.c_nombre}" />  
                        <p:inputText id="#{msg.id_nombre}" value="#{vista_parale.txtnombres}" style="text-transform: uppercase;"/> 
                        <br></br>
                    </h:panelGrid>  
                    <p:commandButton id="#{msg.id_guardar}" value="#{msg.b_guardar}" action="#{vista_parale.insertar}" icon="ui-icon-disk" update="tabla,idgrid"/>  
                    <p:commandButton id="#{msg.id_actualizar}" value="#{msg.b_actualizar}" action="#{vista_parale.modificar}" icon="ui-icon-arrowrefresh-1-w" update="tabla,idgrid" onclick="return modificar()"/>  
                    <p:commandButton value="#{msg.b_cancelar}" action="#{vista_parale.limpiar()}" icon="ui-icon-close" update="idgrid"/>
                </p:panel> 

                <p:dataTable emptyMessage="No existen registros" style="width: 30%" paginator="true" rows="5" id="#{msg.id_tabla}" value="#{vista_parale.lista1}" var="lis" filteredValue="#{vista_parale.filter}">
                    <p:column headerText="#{msg.c_nombre}" filterBy="#{lis.nombre}">
                        <h:outputText value="#{lis.nombre}"/>
                    </p:column >
                    <p:column style="width:2%">
                        <p:commandButton onclick="return eliminar()" id="eliminar" icon="ui-icon-trash" update="#{msg.id_tabla}" action="#{vista_parale.eliminar(lis.codigo)}"  title="Eliminar"/>
                    </p:column>
                </p:dataTable>
            </h:form> 
        </h:body>
    </ui:define>
</ui:composition>

