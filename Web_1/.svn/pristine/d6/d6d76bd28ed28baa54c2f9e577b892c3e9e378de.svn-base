<?xml version='1.0' encoding='iso-8859-1' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition template="/layout.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:p="http://primefaces.org/ui"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core">
    <ui:define name="content">
        <h:head>
            <title>TIPOS DE AULA</title>
            <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
            <link href="estilos/jsfcrud.css" type="text/css" rel="stylesheet" />
        </h:head>
        <h:body>
            <h:form  id="dr"> 
                <p:messages id="messages" showDetail="true" autoUpdate="true" closable="true" />  
                <p:panel id="panel" header="TIPOS DE AULA"> 
                    <h:panelGrid columns="3" cellpadding="5">  
                        <h:outputLabel  value="#{msg.c_codigo}" />  
                        <h:outputText id="#{msg.id_codigo}" value="#{vista_tipo_aulas.txtcodigo}"/>  
                        <br></br>
                        <h:outputLabel value="#{msg.c_nombre}" />  
                        <h:inputText id="#{msg.id_nombre}"  value="#{vista_tipo_aulas.txtnombres}" />  
                        <br></br>

                    </h:panelGrid>  
                    <h:commandButton id="#{msg.id_guardar}" value="#{msg.b_guardar}" action="#{vista_tipo_aulas.insertar}"/>  
                    <h:commandButton id="#{msg.id_actualizar}" value="#{msg.b_actualizar}" action="#{vista_tipo_aulas.modificar}"/>  
                    <h:commandButton value="#{msg.b_cancelar}" type="reset" /> 
                </p:panel> 

                <h:dataTable   headerClass="cabeceraTabla"  id="tabla" value="#{vista_tipo_aulas.lista1}" binding="#{vista_tipo_aulas.tabla}" var="lis" border="0" cellpadding="2" cellspacing="0" rowClasses="jsfcrud_odd_row,jsfcrud_even_row" rules="all" style="border:solid 1px">
                    <h:column>
                        <f:facet name="header">
                            <h:outputText value="#{msg.c_codigo}"/>
                        </f:facet>
                        <h:outputText value="#{lis.codigo}"/>
                    </h:column>
                    <h:column>
                        <f:facet name="header">
                            <h:outputText value="#{msg.c_nombre}"/>
                        </f:facet>
                        <h:outputText value="#{lis.nombre}"/>
                    </h:column>
                    <h:column>
                        <f:facet name="header">
                            <h:outputText value="#{msg.b_editar}"/>
                        </f:facet>
                        <h:commandLink action="#{vista_tipo_aulas.seleccionLista}">
                            Editar
                        </h:commandLink>
                    </h:column>
                    <h:column>
                        <f:facet name="header">
                            <h:outputText value="#{msg.b_eliminar}"/>
                        </f:facet>
                        <h:commandLink action="#{vista_tipo_aulas.eliminar}">
                            Eliminar
                        </h:commandLink>
                    </h:column>
                </h:dataTable>
            </h:form> 
        </h:body>
    </ui:define>
</ui:composition>



