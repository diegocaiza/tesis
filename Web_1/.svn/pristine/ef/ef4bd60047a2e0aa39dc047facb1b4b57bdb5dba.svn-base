<?xml version='1.0' encoding='iso-8859-1' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition template="/layout.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:p="http://primefaces.org/ui"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core">
    <ui:define name="content">
        <h:head>
            <title>TIPOS DE AULA</title>
            <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
            <link href="estilos/jsfcrud.css" type="text/css" rel="stylesheet" />
            <script type="text/javascript" src="estilos/validaciones.js"></script>
        </h:head>
        <h:body id="cuerpo">
            <h:form  id="dr"> 
                <p:messages id="messages" showDetail="true" autoUpdate="true" closable="true" />  
                <p:panel id="panel" header="TIPOS DE AULA"> 
                    <h:panelGrid columns="3" cellpadding="5" id="idgrid">
                        <br></br>
                        <h:outputLabel value="#{msg.c_nota}" style="color: #FF0000"/>
                        <br></br>
                        <h:outputLabel  value="#{msg.c_codigo}" />  
                        <h:outputText id="#{msg.id_codigo}" value="#{vista_tipo_aulas.txtcodigo}"/>  
                        <br></br>
                        <h:outputLabel value="#{msg.c_nombre}">
                        <h:outputLabel value="*" style="color: #FF0000"/>
                        </h:outputLabel>  
                        <p:inputText id="#{msg.id_nombre}"  value="#{vista_tipo_aulas.txtnombres}" style="text-transform: uppercase;"/>  
                        <br></br>
                    </h:panelGrid>  
                    <p:commandButton id="#{msg.id_guardar}" value="#{msg.b_guardar}" action="#{vista_tipo_aulas.insertar}" icon="ui-icon-disk" update="dr,idgrid,tabla"/>  
                    <p:commandButton id="#{msg.id_actualizar}" value="#{msg.b_actualizar}" action="#{vista_tipo_aulas.modificar}" icon="ui-icon-arrowrefresh-1-w" update="tabla,idgrid" onclick="return modificar()"/>  
                    <p:commandButton value="#{msg.b_cancelar}" action="#{vista_tipo_aulas.limpiar()}" icon="ui-icon-close" update="idgrid"/> 
                </p:panel> 
                <p:dataTable emptyMessage="No existen registros" style="width:30%" selection="#{vista_tipo_aulas.aulaSeleccionada}" selectionMode="single" rowKey="#{lis.codigo}" paginator="true" rows="5" id="tabla" var="lis" value="#{vista_tipo_aulas.lista1}" filteredValue="#{vista_tipo_aulas.filter}">
                    <p:ajax event="rowSelect" listener="#{vista_tipo_aulas.seleccionListaPrueba}" update=":dr" />
                    <p:column headerText="Nombre" sortBy="#{lis.nombre}" filterBy="#{lis.nombre}">
                        <h:outputText value="#{lis.nombre}"/>
                    </p:column>
                    <p:column style="width:4%">
                        <p:commandButton onclick="return eliminar()" action="#{vista_tipo_aulas.eliminar(lis.codigo)}"  title="Eliminar" id="eliminar" icon="ui-icon-trash" update="tabla"/>
                    </p:column>
                </p:dataTable>
            </h:form> 
        </h:body>
    </ui:define>
</ui:composition>



