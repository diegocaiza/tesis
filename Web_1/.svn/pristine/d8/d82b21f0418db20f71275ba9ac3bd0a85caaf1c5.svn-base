<?xml version='1.0' encoding='iso-8859-1' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition template="/layout.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:p="http://primefaces.org/ui"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core">
    <ui:define name="content">
        <h:head>
            <title>ADMINISTRACIÓN DE PERFILES DE USUARIO</title>
            <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
            <link href="estilos/jsfcrud.css" type="text/css" rel="stylesheet" />
            <script type="text/javascript" src="estilos/validaciones.js"></script>
        </h:head>
        <h:body>
            <h:form  id="dr"> 
                <p:messages id="messages" showDetail="true" autoUpdate="true" closable="true" />  
                <p:panel id="panel" header="ADMINISTRACIÓN DE PERFILES DE USUARIO"> 
                    <h:panelGrid columns="3" cellpadding="5" id="idgrid"> 
                        <br></br>
                        <h:outputLabel value="#{msg.c_nota}" style="color: #FF0000"/>
                        <br></br>
                        <h:outputLabel value="Código:" />  
                        <h:outputText id="codigo" value="#{vista_tipo_usuario.txtcodigo}"/>  
                        <br></br>
                        <h:outputLabel value="Perfil de Usuario:">
                            <h:outputLabel value="*" style="color: #FF0000"/>
                        </h:outputLabel>  
                        <p:inputText id="nombre"  value="#{vista_tipo_usuario.txtnombres}"  style="text-transform: uppercase;" maxlength="100" size="40"/>  
                        <br></br>
                    </h:panelGrid>  
                    <p:commandButton id="login" value="Guardar" action="#{vista_tipo_usuario.insertar}" icon="ui-icon-disk" update="tabla,idgrid"/>  
                    <p:commandButton id="login4" value="Actualizar" action="#{vista_tipo_usuario.modificar}" icon="ui-icon-arrowrefresh-1-w" update="tabla,idgrid" onclick="return modificar()"/>  
                    <p:commandButton value="#{msg.b_cancelar}" type="reset" action="#{vista_tipo_usuario.limpiar()}" icon="ui-icon-close"/> 
                </p:panel> 
                <p:dataTable style="width:30%" id="tabla" emptyMessage="No existen registros" filteredValue="#{vista_tipo_usuario.filter}" selectionMode="single" selection="#{vista_tipo_usuario.entidad}" paginator="true" rows="5" rowKey="#{lis.tu_codigo}" value="#{vista_tipo_usuario.lista1}" var="lis">
                    <p:ajax event="rowSelect" listener="#{vista_tipo_usuario.seleccionLista}" update=":dr"/>
                    <p:column headerText="Código" style="width: 2%">
                        <h:outputText value="#{lis.tu_codigo}"/>
                    </p:column>
                    <p:column headerText="Perfil" style="width: 8%">
                        <h:outputText value="#{lis.tu_nombre}"/>
                    </p:column>
                    <p:column style="width:1%">
                        <p:commandButton onclick="return eliminar()" id="eliminar" icon="ui-icon-trash" update="tabla" action="#{vista_tipo_usuario.eliminar(lis.tu_codigo)}"  title="Eliminar"/>
                    </p:column>
                </p:dataTable>
            </h:form>
        </h:body>
    </ui:define>
</ui:composition>






