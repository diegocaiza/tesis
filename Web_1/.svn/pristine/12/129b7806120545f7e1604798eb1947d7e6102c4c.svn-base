<?xml version='1.0' encoding='iso-8859-1' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition template="/layout.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:p="http://primefaces.org/ui"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core">
    <ui:define id="content" name="content">
        <h:head>
            <title>Cambiar Clave</title>
            <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
            <link href="estilos/jsfcrud.css" type="text/css" rel="stylesheet" />
        </h:head>
        <h:body>
            <h:form  id="dr"> 

                <p:messages id="messages" showDetail="true" autoUpdate="true" closable="true" />  
                <p:panel id="panel" header="CAMBIO DE CONTRASEÑA"> 
                    <h4 style="border-style: outset"> <p:outputLabel value="INGRESE SU CONTRASEÑA ACTUAL Y UNA NUEVA PARA LA ACTUALIZACION"/></h4> 
                    <h:outputLabel value="La nueva contraseña debe tener más de 6 caracteres" style="background-color: #C2DFEF;font-weight:bold"/>
                    <br></br><br></br>
                    <h:panelGrid columns="3" cellpadding="5">  

                        <h:outputLabel for="claveActual" value="Contraseña Actual:" />  
                        <p:password id="claveActual" value="#{vista_pantalla_por_usuario.actual}" maxlength="100"/> 
                        <br></br>
                        <h:outputLabel for="claveNueva" value="Contraseña Nueva:" />  
                        <p:password id="claveNueva" value="#{vista_pantalla_por_usuario.input1}" feedback="true" maxlength="20"/>
                        <br></br>
                        <h:outputLabel for="claveConfirmar" value="Confirmar Contraseña:" />  
                        <p:password id="claveConfirmar" value="#{vista_pantalla_por_usuario.input2}" feedback="true" maxlength="20"/>  
                        <br></br>
                        <h:outputLabel value="Para mayor seguridad escoja 
                                       una pregunta y conteste" />  
                        <p:selectOneMenu value="#{vista_pantalla_por_usuario.txtpregunta}">  
                            <f:selectItem itemLabel="Primer nombre de tu Madre?" itemValue="madre" />  
                            <f:selectItem itemLabel="Primer nombre de tu Padre?" itemValue="padre" /> 
                            <f:selectItem itemLabel="Primer nombre de tu escuela primaria?" itemValue="escuela" />
                            <f:selectItem itemLabel="Primer nombre de tu equipo de fútbol favorito?" itemValue="equipo" /> 
                            <f:selectItem itemLabel="Primer nombre un Hobbie que practiques?" itemValue="hobbie" /> 
                        </p:selectOneMenu>
                        <br></br>
                        <h:outputLabel value="Respuesta Secreta:" />
                        <p:inputText id="res" value="#{vista_pantalla_por_usuario.txtrespuesta}" maxlength="80" size="40" required="true" requiredMessage="Se requiere una respuesta" style="text-transform: uppercase;"/> 
                    </h:panelGrid>  
                    <p:commandButton id="login111" value="Guardar Cambios" action="#{vista_pantalla_por_usuario.modificarClave}" icon="ui-icon-disk"/> 
                    <p:commandButton value="#{msg.b_cancelar}" type="reset" icon="ui-icon-close"/>
                </p:panel> 
            </h:form> 
        </h:body>
    </ui:define>
</ui:composition>