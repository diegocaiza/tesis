<?xml version='1.0' encoding='iso-8859-1' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition template="/layout.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:p="http://primefaces.org/ui"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core">
    <ui:define name="content">
        <h:head>
            <title>PROMOCIONES</title>
            <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
            <link href="estilos/jsfcrud.css" type="text/css" rel="stylesheet" />
            <script type="text/javascript" src="estilos/validaciones.js"></script>
        </h:head>
        <h:body>
            <h:form  id="#{msg.id_formulario1}"> 
                <p:messages id="#{msg.id_mensaje}" showDetail="true" autoUpdate="true" closable="true" />  
                <p:panel id="#{msg.id_panel}" header="PROMOCIONES"> 
                    <h:panelGrid columns="3" cellpadding="5" id="idgrid">  
                        <br></br>
                        <h:outputLabel value="#{msg.c_nota}" style="background-color: #C2DFEF;font-weight:bold"/>
                        <br></br><br></br>
                        <h:outputLabel value="#{msg.c_codigo}" />  
                        <p:inputText id="#{msg.id_codigo}" value="#{vista_promocion.txtcodigo}" disabled="#{vista_promocion.deshabilitar_clave_compuesta}"/> 

                        <br></br>
                        <h:outputLabel  value="#{msg.c_programa_postgrado}" />  
                        <p:selectOneMenu disabled="#{vista_promocion.deshabilitar_lista}" id="#{msg.id_lista1}" value="#{vista_promocion.txtcodigo_programa}" filter="true" >
                            <f:selectItem itemLabel="Seleccione el programa" itemValue="" />  
                            <f:selectItems value="#{vista_promocion.listaprograma}"/>
                            <p:ajax update="tabla"  
                                    listener="#{vista_promocion.devolver}" />
                        </p:selectOneMenu>
                        <br></br>
                        <h:outputLabel value="#{msg.c_paralelo}" />  
                        <p:selectOneMenu id="#{msg.id_lista2}" value="#{vista_promocion.txtcodigoparalelo}" disabled="#{vista_promocion.deshabilitar_clave_compuesta}">
                            <f:selectItem itemLabel="Seleccione el Paralelo" itemValue="" />  
                            <f:selectItems value="#{vista_promocion.listaparalelo}"/>
                        </p:selectOneMenu>
                        <br></br>
                        <h:outputLabel value="#{msg.c_nombre}" />  
                        <p:inputText id="#{msg.id_nombre}" value="#{vista_promocion.txtnombres}" style="text-transform: uppercase;" size="30" maxlength="60"/>  
                        <br></br>
                        <h:outputLabel  value="#{msg.c_numero_estudiantes_estimados}" />  
                        <p:spinner id="spinnerBasic"   
                                   value="#{vista_promocion.txtestudiantes}" min="1" max="35"/> 
                        <br></br>
                        <h:outputLabel  value="#{msg.c_numero_estudiantes_real}" />  
                        <h:outputText id="#{msg.id_codigo_total}" value="#{vista_promocion.txttotal_estudiantes}"/>  
                        <br></br>
                        <h:outputLabel value="#{msg.c_fecha_i}" />  
                        <p:calendar value="#{vista_promocion.txtfechainicio}" pattern="yyyy-MM-dd" navigator="true" showButtonPanel="true"/>  
                        <br></br>
                        <h:outputLabel value="#{msg.c_fecha_f}" />  
                        <p:calendar value="#{vista_promocion.txtfechafin}" pattern="yyyy-MM-dd" navigator="true" showButtonPanel="true"/>

                    </h:panelGrid>  
                    <p:commandButton id="#{msg.id_guardar}" value="#{msg.b_guardar}" action="#{vista_promocion.insertar}" icon="ui-icon-disk" update="tabla,idgrid"/>  
                    <p:commandButton id="#{msg.id_actualizar}" value="#{msg.b_actualizar}" action="#{vista_promocion.modificar}" icon="ui-icon-arrowrefresh-1-w" update="tabla,idgrid" onclick="return modificar()"/>  
                    <p:commandButton value="#{msg.b_cancelar}" icon="ui-icon-close" action="#{vista_promocion.limpiar()}" update="idgrid"/>  
                </p:panel> 
                <p:dataTable emptyMessage="No existen registros" paginator="true" rows="5" rowKey="#{lis.prom_codigo}" selection="#{vista_promocion.entidad}" selectionMode="single" id="tabla" value="#{vista_promocion.lista2}" var="lis" >
                    <f:facet name="header">  
                        #{lis.pp_nombre} 
                    </f:facet>  
                    <p:ajax event="rowSelect" listener="#{vista_promocion.seleccionarPromocion}" update=":#{msg.id_formulario1}"/>
                    <p:column headerText="#{msg.c_codigo}">
                        <h:outputText value="#{lis.prom_codigo}"/>
                    </p:column>
                    <p:column headerText="Nombre Promoción">
                        <h:outputText value="#{lis.pro_nombre}"/>
                    </p:column>
                    <p:column headerText="#{msg.c_paralelo}" style="text-align: center">
                        <h:outputText value="#{lis.pl_nombre}"/>
                    </p:column>
                    <p:column headerText="#{msg.c_numero_estudiantes_estimados}" style="text-align: center">
                        <h:outputText value="#{lis.numestudiantes}"/>
                    </p:column>
                    <p:column headerText="Número Real de estudiantes" style="text-align: center">
                        <h:outputText value="#{lis.pp_total_real_estudiantes}"/>
                    </p:column>
                    <p:column headerText="#{msg.c_fecha_i}">
                        <h:outputText value="#{lis.prom_fechainicio}"/>
                    </p:column>
                    <p:column headerText="#{msg.c_fecha_f}">
                        <h:outputText value="#{lis.pro_fechafin}"/>
                    </p:column>

                    <p:column headerText="#{msg.c_estado}">
                        <h:outputText value="#{lis.pp_estado}"/>
                    </p:column>
                    <p:column style="width:4%">
                        <p:commandButton onclick="return eliminar()" id="eliminar" icon="ui-icon-trash" update="tabla" action="#{vista_promocion.eliminar(lis.prom_codigo)}"  title="Eliminar"/>
                    </p:column> 
                </p:dataTable>
            </h:form> 
        </h:body>
    </ui:define>
</ui:composition>
