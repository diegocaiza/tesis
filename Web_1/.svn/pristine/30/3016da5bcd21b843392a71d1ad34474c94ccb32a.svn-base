<?xml version='1.0' encoding='iso-8859-1' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition template="/layout.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:p="http://primefaces.org/ui"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core">
    <ui:define name="content">
        <h:head>
            <title>Reportes</title>
            <link href="estilos/jsfcrud.css" type="text/css" rel="stylesheet" />
            <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
        </h:head>
        <h:body  >
            <p:accordionPanel> 
                <p:tab title="Reportes Asistencia de Alumnos">  
                    <h:form  id="fr1"> 
                        <p:messages id="messages4" showDetail="true" autoUpdate="true" closable="true" />  
                        <p:panel id="panel4" header="Asistencias Alumnos"> 
                            <h:outputLabel value="#{msg.c_nota}" style="color: #FF0000"/>
                            <br></br>  <br></br>
                            <h:outputLabel value="Escoja una Promoción:">
                                <h:outputLabel value="*" style="color: #FF0000"/>
                            </h:outputLabel> 
                            <br></br>
                            <p:selectOneMenu id="lista6" value="#{vista_prueba_reporte.txtpromocion}" required="true" requiredMessage="Se requiere una promoción"> 
                                <f:selectItem itemLabel="Seleccione una promoción" itemValue="" />  
                                <f:selectItems value="#{vista_prueba_reporte.listapromo}"/>
                                <p:ajax update="tabla"  
                                        listener="#{vista_prueba_reporte.devolvertabla}" />

                            </p:selectOneMenu>
                            <br></br>
                            <h:outputLabel value="Escoja un Grupo de Módulo:">
                                <h:outputLabel value="*" style="color: #FF0000"/>
                            </h:outputLabel>  
                            <br></br>
                            <p:selectOneMenu id="lista5" value="#{vista_prueba_reporte.txtgrupo_modulo}"  filter="true" required="true" requiredMessage="Se requiere el módulo">
                                <f:selectItem itemLabel="Seleccione un módulo" itemValue="" />  
                                <f:selectItems value="#{vista_prueba_reporte.lista_grupo_modulo}"/>
                            </p:selectOneMenu>
                            <br></br>
                            <h:outputLabel value="Formato Reporte:">
                                <h:outputLabel value="*" style="color: #FF0000"/>
                            </h:outputLabel> 
                            <h:selectOneRadio id="customRadio2" value="#{vista_prueba_reporte.txtipo}" required="true"  requiredMessage="Se requiere un formato">  
                                <f:selectItem itemLabel="Formato PDF" itemValue="pdf" />  
                                <f:selectItem itemLabel="Formato Excel" itemValue="excel" />  
                            </h:selectOneRadio> 

                            <h:commandButton id="imprimir_r" style=" color: #0080FF " value="Imprimir Reporte Asistencias" action="#{vista_prueba_reporte.imprimir}" />  
                        </p:panel> 
                        <p:dataTable emptyMessage="No existen registros" id="tabla" value="#{vista_prueba_reporte.lista1}" var="lis">
                            <p:column headerText="Estado">
                                <h:outputText value="#{lis.estado_fecha}"  style="font-size:20px"/>
                            </p:column>
                            <p:column headerText="Grupo">
                                <h:outputText value="#{lis.grupo_modulo}"  style="font-size:20px"/>
                            </p:column>
                            <p:column headerText="Módulo" >
                                <h:outputText value="#{lis.nombre_mod}"/>
                            </p:column>
                            <p:column headerText="Fecha de clases" >
                                <h:outputText value="#{lis.fd_fecha}" />
                            </p:column>
                            <p:column headerText="Hora Inicio">
                                <h:outputText value="#{lis.fd_hora_i}"/>
                            </p:column>
                            <p:column headerText="Hora final">
                                <h:outputText value="#{lis.fd_hora_f}"/>
                            </p:column>
                            <p:column headerText="Número Aula">
                                <h:outputText value="#{lis.numero}"/>
                            </p:column>
                            <p:column headerText="Bloque">
                                <h:outputText value="#{lis.bloque}"/>
                            </p:column>
                            <p:column headerText="Asignatura o Unidad tematica">
                                <h:outputText value="#{lis.asig_codigo}"/>
                            </p:column>
                            <p:column headerText="Profesor">
                                <h:outputText value="#{lis.nombre_profesor}"/>
                            </p:column>

                        </p:dataTable>

                    </h:form> 
                </p:tab> 
                <p:tab title="Reportes Asistencia de Profesores">  
                    <h:form  id="fr"> 
                        <p:messages id="messages" showDetail="true" autoUpdate="true" closable="true" />  
                        <p:panel id="panel" header="REPORTE ASISTENCIAS PROFESOR"> 
                            <h:outputLabel value="#{msg.c_nota}" style="color: #FF0000"/>
                            <br></br>  <br></br>
                            <h:outputLabel value="Escoja un Profesor:">
                                <h:outputLabel value="*" style="color: #FF0000"/>
                            </h:outputLabel> 
                            <br></br>
                            <p:selectOneMenu id="lista1" value="#{vista_reporte_asistencias_profesor.txtcedula}" filter="true" >
                                <f:selectItem itemLabel="Seleccione un Profesor" itemValue="" />  
                                <f:selectItems value="#{vista_reporte_asistencias_profesor.lista_profesor}"/>
                                <p:ajax update="tabla"  
                                        listener="#{vista_reporte_asistencias_profesor.devolvertabla}" />
                            </p:selectOneMenu>
                            <br></br>
                            <h:outputLabel value="Fecha Inicio:">
                                <h:outputLabel value="*" style="color: #FF0000"/>
                            </h:outputLabel>
                            <br></br>
                            <p:calendar value="#{vista_reporte_asistencias_profesor.txtfechainicio}" pattern="yyyy-MM-dd" required="true"
                                        requiredMessage="Fecha inicio es requerida."/> 
                            <br></br>
                            <h:outputLabel value="Fecha Final:">
                                <h:outputLabel value="*" style="color: #FF0000"/>
                            </h:outputLabel>
                            <br></br>
                            <p:calendar value="#{vista_reporte_asistencias_profesor.txtfechafin}" pattern="yyyy-MM-dd"  required="true"
                                        requiredMessage="Fecha final es requerida."/>
                            <br></br>
                            <h:outputLabel value="Formato Reporte:">
                                <h:outputLabel value="*" style="color: #FF0000"/>
                            </h:outputLabel> 
                            <h:selectOneRadio id="customRadio2" value="#{vista_reporte_asistencias_profesor.txtipo}" required="true"  requiredMessage="Se requiere un formato">  
                                <f:selectItem itemLabel="Formato PDF" itemValue="pdf" />  
                                <f:selectItem itemLabel="Formato Excel" itemValue="excel" />  
                            </h:selectOneRadio> 

                            <h:commandButton id="imprimir" style=" color: #0080FF" value="Imprimir Reporte Asistencias" action="#{vista_reporte_asistencias_profesor.imprimir_reporte}"/>  

                        </p:panel> 

                        <p:dataTable emptyMessage="No existen registros" id="tabla" value="#{vista_reporte_asistencias_profesor.lista1}" var="lis" >
                            <p:column headerText="Estado">
                                <h:outputText value="#{lis.estado_fecha}"  style="font-size:20px"/>
                            </p:column>
                            <p:column headerText="Grupo">
                                <h:outputText value="#{lis.grupo_modulo}"  style="font-size:20px"/>
                            </p:column>
                            <p:column headerText="Fecha de clases" filterBy="#{lis.fd_fecha}">
                                <h:outputText value="#{lis.fd_fecha}" />
                            </p:column>
                            <p:column headerText="Hora Inicio">
                                <h:outputText value="#{lis.fd_hora_i}"/>
                            </p:column>
                            <p:column headerText="Hora final">
                                <h:outputText value="#{lis.fd_hora_f}"/>
                            </p:column>
                            <p:column headerText="Número Aula">
                                <h:outputText value="#{lis.numero}"/>
                            </p:column>
                            <p:column headerText="Bloque">
                                <h:outputText value="#{lis.bloque}"/>
                            </p:column>
                            <p:column headerText="Módulo" filterBy="#{lis.nombre_mod}">
                                <h:outputText value="#{lis.nombre_mod}"/>
                            </p:column>
                            <p:column headerText="Asignatura o Unidad tematica" filterBy="#{lis.asig_codigo}">
                                <h:outputText value="#{lis.asig_codigo}"/>
                            </p:column>
                            <p:column headerText="Profesor" filterBy="#{lis.nombre_profesor}">
                                <h:outputText value="#{lis.nombre_profesor}"/>
                            </p:column>
                        </p:dataTable>
                    </h:form> 
                </p:tab>
            </p:accordionPanel>
        </h:body>
    </ui:define>
</ui:composition>

