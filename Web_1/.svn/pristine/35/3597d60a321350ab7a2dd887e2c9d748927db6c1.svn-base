<?xml version='1.0' encoding='iso-8859-1' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition template="/layout.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:p="http://primefaces.org/ui"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core">
    <ui:define name="content">
        <h:head>
            <title>ADMINISTRACIÓN DE MODULOS</title>
            <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
            <link href="estilos/jsfcrud.css" type="text/css" rel="stylesheet" />
            <script type="text/javascript" src="estilos/validaciones.js"></script>
        </h:head>
        <h:body>
            <h:form  id="formulario_1"> 
                <p:commandButton id="crearmodulo"  action="#{vista_modulo.limpiar}" update=":fcrear" oncomplete="dlgcrear.show()" icon="icon-new" value="Nuevo">  
                </p:commandButton> 
            </h:form>  
            <h:form id="formDataTable">  
                <p:dataTable emptyMessage="No existen registros" rowKey="#{lis.codigo}" selectionMode="single" selection="#{vista_modulo.entidad}" paginator="true" rows="5" filteredValue="#{vista_modulo.filter}" id="tabla1" value="#{vista_modulo.lista2}" var="lis">
                    <f:facet name="header">  
                        #{lis.pp_nombre}
                    </f:facet>
                    <p:ajax event="rowSelect" listener="#{vista_modulo.seleccionarModulo}" update=":factualizar" oncomplete="dlgactualizar.show()"/>

                    <p:column headerText="Nombre Módulo" filterBy="#{lis.nombre}">
                        <h:outputText value="#{lis.nombre}"/>
                    </p:column>
                    <p:column headerText="#{msg.c_numero_creditos}" style="width:2%">
                        <h:outputText value="#{lis.creditos}"/>
                    </p:column>
                    <p:column headerText="#{msg.c_tipo}">
                        <h:outputText value="#{lis.tipo_nombre}"/>
                    </p:column>
                    <p:column style="width:4%">
                        <p:commandButton  value="ver asignaturas" id="Ver_asignaturas" action="#{vista_usuario.seleccionar_codigo_modulo(lis.codigo)}"  title="Ver asignaturas" update="@([id$=tabla_asig])">
                        </p:commandButton>
                    </p:column>
                    <p:column style="width:4%">
                        <p:commandButton onclick="return eliminar()" id="eliminar" icon="ui-icon-trash" update="tabla1" action="#{vista_modulo.eliminar(lis.codigo)}"  title="Eliminar"/>
                    </p:column>
                </p:dataTable>
            </h:form>
            <h:form  id="formulario_btn_asignatura"> 
                <p:commandButton id="crearasignatura"  action="#{vista_asignatura.limpiar}" update=":fcrear_asignatura" oncomplete="dialog_crear_asignatura.show()" icon="icon-new" value="Nuevo">  
                </p:commandButton> 
            </h:form>
            <h:form  id="fcrear_asignatura">
                <p:dialog id="dialog_crear_asignatura"  header="Crear" widgetVar="dialog_crear_asignatura" resizable="false"> 
                    <h:panelGrid columns="3" cellpadding="5" id="idgrid_asignatura">  
                        <br></br>
                        <h:outputLabel value="#{msg.c_nota}" style="color: #FF0000"/>
                        <br></br><br></br>
                        <h:outputLabel  value="#{msg.c_nombre}" />  
                        <p:inputText id="nombre" value="#{vista_asignatura.txtnombresmod}"  size="50" style="text-transform: uppercase;"/>  
                        <br></br>
                        <h:outputLabel  value="#{msg.c_numero_creditos}" />  
                        <p:spinner id="spinnerBasic"   
                                   value="#{vista_asignatura.txtcreditos}"/> 
                        <br></br>
                        <h:outputLabel  value="Descripción" />  
                        <p:selectOneMenu id="#{msg.id_lista3}" value="#{vista_asignatura.txtdescripcion}">
                            <f:selectItem itemLabel="Seleccione una Descripción" itemValue="" />  
                            <f:selectItems value="#{vista_asignatura.listatipo}"/>
                        </p:selectOneMenu>
                    </h:panelGrid>  
                    <p:commandButton id="btnguardarasig" value="#{msg.b_guardar}" action="#{vista_asignatura.insertar}" icon="ui-icon-disk" update="@([id$=tabla_asig])"/>  
                </p:dialog>   
            </h:form>
            <h:form  id="factualizar_asignatura">
                <p:dialog id="dialog_actualizar_asignatura"  header="Crear" widgetVar="dialog_actualizar_asignatura" resizable="false"> 
                    <h:panelGrid columns="3" cellpadding="5" id="idgrid_actualizar_asignatura">  
                        <br></br>
                        <h:outputLabel value="#{msg.c_nota}" style="background-color: #C2DFEF;font-weight:bold"/>
                        <br></br><br></br>
                        <h:outputLabel value="#{msg.c_codigo}" />   
                        <h:outputText id="#{msg.id_codigo}" value="#{vista_asignatura.txtcodigoasignatura}"/>  
                        <br></br>
                        <h:outputLabel  value="#{msg.c_nombre}" />  
                        <p:inputText id="nombre" value="#{vista_asignatura.txtnombresmod}"  size="50" style="text-transform: uppercase;"/>  
                        <br></br>
                        <h:outputLabel  value="#{msg.c_numero_creditos}" />  
                        <p:spinner id="spinnerBasic"   
                                   value="#{vista_asignatura.txtcreditos}"/> 
                        <br></br>
                        <h:outputLabel  value="Descripción" />  
                        <p:selectOneMenu id="#{msg.id_lista3}" value="#{vista_asignatura.txtdescripcion}">
                            <f:selectItem itemLabel="Seleccione una Descripción" itemValue="" />  
                            <f:selectItems value="#{vista_asignatura.listatipo}"/>
                        </p:selectOneMenu>
                    </h:panelGrid>  
                    <p:commandButton id="btnactualizar_asignatura" value="#{msg.b_actualizar}" action="#{vista_asignatura.modificar}" icon="ui-icon-arrowrefresh-1-w" update="@([id$=tabla_asig])" onclick="return modificar()"/>  
                </p:dialog>   
            </h:form>
            <h:form id="form_asignatura">  
                <p:dataTable emptyMessage="No existen registros" rowKey="#{lis.codigo}" selectionMode="single" selection="#{vista_asignatura.entidad}" paginator="true" rows="5" filteredValue="#{vista_asignatura.filter}" id="tabla_asig" value="#{vista_asignatura.lista2}" var="lis">
                    <p:ajax event="rowSelect" listener="#{vista_asignatura.seleccionarAsignatura}"   update=":factualizar_asignatura" oncomplete="dialog_actualizar_asignatura.show()"/>
                    <p:column headerText="#{msg.c_modulo}" filterBy="#{lis.modulo_nombre}">
                        <h:outputText value="#{lis.modulo_nombre}"/>
                    </p:column>
                    <p:column headerText="Nombre Asignatura" filterBy="#{lis.nombre}">
                        <h:outputText value="#{lis.nombre}"/>
                    </p:column>
                    <p:column headerText="#{msg.c_tipo}" filterBy="#{lis.tipo_nombre}">
                        <h:outputText value="#{lis.tipo_nombre}"/>
                    </p:column>
                    <p:column headerText="#{msg.c_numero_creditos}">
                        <h:outputText value="#{lis.creditos}"/>
                    </p:column>
                    <p:column style="width:4%">
                        <p:commandButton onclick="return eliminar()" id="eliminar" icon="ui-icon-trash" update="tabla_asig" action="#{vista_asignatura.eliminar(lis.codigo)}"  title="Eliminar"/>
                    </p:column>
                </p:dataTable>
            </h:form>
            <h:form  id="fcrear">
                <p:dialog id="dialog"  header="Crear" widgetVar="dlgcrear" resizable="false"> 
                    <h:panelGrid columns="3" cellpadding="5" id="idgrid">  
                        <br></br>
                        <h:outputLabel value="#{msg.c_nota}" style="background-color: #C2DFEF;font-weight:bold"/>
                        <br></br><br></br>
                        <h:outputLabel value="#{msg.c_codigo}" />  
                        <h:outputText id="#{msg.id_codigo}" value="#{vista_modulo.txtcodigomod}"/>  
                        <br></br>
                        <h:outputLabel value="#{msg.c_programa_postgrado}" />  
                        <p:selectOneMenu id="#{msg.id_lista1}" value="#{vista_modulo.txtcodigo_programa}">
                            <f:selectItems value="#{vista_modulo.listaprograma_por_coordinador}"/>
                        </p:selectOneMenu>
                        <br></br>
                        <h:outputLabel value="#{msg.c_nombre}" />   
                        <p:inputText id="#{msg.id_nombre}"  value="#{vista_modulo.txtnombresmod}" size="50" style="text-transform: uppercase"/>  
                        <br></br>
                        <h:outputLabel value="#{msg.c_numero_creditos} " />  
                        <p:spinner id="spinnerBasic"   
                                   value="#{vista_modulo.txtcreditos}" min="0" max="6"/> 
                        <br></br>
                        <h:outputLabel value="Descripción" />  
                        <p:selectOneMenu id="#{msg.id_lista2}" value="#{vista_modulo.txttipomod}">
                            <f:selectItem itemLabel="Seleccione una descripción" itemValue="" />  
                            <f:selectItems value="#{vista_modulo.listatipo}"/>
                        </p:selectOneMenu>
                    </h:panelGrid>  
                    <p:commandButton id="#{msg.id_guardar}" value="#{msg.b_guardar}" action="#{vista_modulo.insertar}" icon="ui-icon-disk" update="@([id$=tabla1])"/>  
                </p:dialog> 
            </h:form> 
            <h:form  id="factualizar">
                <p:dialog id="dialog" header="Login" widgetVar="dlgactualizar" resizable="false"> 
                    <h:panelGrid columns="3" cellpadding="5" id="idgrid">  
                        <br></br>
                        <h:outputLabel value="#{msg.c_nota}" style="background-color: #C2DFEF;font-weight:bold"/>
                        <br></br><br></br>
                        <h:outputLabel value="#{msg.c_codigo}" />  
                        <h:outputText id="#{msg.id_codigo}" value="#{vista_modulo.txtcodigomod}"/>  
                        <br></br>
                        <h:outputLabel value="#{msg.c_programa_postgrado}" />  
                        <p:selectOneMenu id="#{msg.id_lista1}" value="#{vista_modulo.txtcodigo_programa}">
                            <f:selectItems value="#{vista_modulo.listaprograma_por_coordinador}"/>
                        </p:selectOneMenu>
                        <br></br>
                        <h:outputLabel value="#{msg.c_nombre}" />   
                        <p:inputText id="#{msg.id_nombre}"  value="#{vista_modulo.txtnombresmod}" size="50" style="text-transform: uppercase"/>  
                        <br></br>
                        <h:outputLabel value="#{msg.c_numero_creditos} " />  
                        <p:spinner id="spinnerBasic"   
                                   value="#{vista_modulo.txtcreditos}" min="0" max="6"/> 
                        <br></br>
                        <h:outputLabel value="Descripción" />  
                        <p:selectOneMenu id="#{msg.id_lista2}" value="#{vista_modulo.txttipomod}">
                            <f:selectItem itemLabel="Seleccione una descripción" itemValue="" />  
                            <f:selectItems value="#{vista_modulo.listatipo}"/>
                        </p:selectOneMenu>
                    </h:panelGrid>  
                    <p:commandButton id="#{msg.id_actualizar}" value="#{msg.b_actualizar}" action="#{vista_modulo.modificar}" icon="ui-icon-arrowrefresh-1-w" update="@([id$=tabla1])" onclick="return modificar()"/>  
                </p:dialog> 
            </h:form> 
        </h:body>
    </ui:define>
</ui:composition>

