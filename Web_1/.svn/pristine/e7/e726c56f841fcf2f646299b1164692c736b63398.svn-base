<?xml version='1.0' encoding='iso-8859-1' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition template="/layout.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:p="http://primefaces.org/ui"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core">
    <ui:define name="content">
        <h:head>
            <title>Reseteo Clave</title>
            <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
            <link href="estilos/jsfcrud.css" type="text/css" rel="stylesheet" />
            <script type="text/javascript" src="estilos/validaciones.js"></script>
        </h:head>

        <h:body>
            <h:form  id="dr"> 
                <p:messages id="messages" showDetail="true" autoUpdate="true" closable="true" />  
                <p:panel id="panel" header="RESETEO DE CLAVES DE ACCESO AL SISTEMA"> 
                    <h:panelGrid columns="3" cellpadding="5" id="idgrid"> 
                        <br></br>
                        <h:outputLabel value="#{msg.c_nota}" style="background-color: #C2DFEF;font-weight:bold"/>
                        <br></br>
                        <h:outputLabel  value="Ingrese la Cédula del Usuario: *" />  
                        <p:inputText value="#{vista_usuario.txtcedula}" maxlength="10">
                            <p:ajax update="nombreU,estadoU" listener="#{vista_usuario.buscar_usuario_reseteo()}"/>
                        </p:inputText>
                        <br></br>
                        <h:outputLabel value="Nombre:"/>
                        <h:inputText id="nombreU" value="#{vista_usuario.txtnombres1}" disabled="true" size="50"/>
                        <br></br>
                        <h:outputLabel value="Estado"/>
                        <h:outputLabel id="estadoU" value="#{vista_usuario.txtestado}"/>
                    </h:panelGrid>  
                    <p:commandButton id="btn_resetear" onclick="return res_clave()" value="Resetear Clave" action="#{vista_usuario.reseteo_clave()}" icon="ui-icon-arrowrefresh-1-w" update="idgrid"/>  
                </p:panel> 
            </h:form> 
        </h:body>
    </ui:define>
</ui:composition>

